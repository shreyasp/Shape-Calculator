<div class="col-md-3 description shape-select calc-box-margin">
  <div id="step_2">
    <h4>Step 2 : Insert your values</h4>
    <p>You have selected a <strong>{{ shape }}</strong>, please input the required variables.</p>
    <form method="post" action="3">
      {{#each dimension_names}}
      <div class="input-group">
          <span class="input-group-addon">
            {{this}}
          </span>
          <input class="form-control" type="text" name="{{ this }}" placeholder="Please enter value">
      </div>
      <br>
      {{/each}}
      <br>
      <br>
      <br>
      <span class="input-group-btn">
        <button type="submit" class="btn btn-default shape-calc-btn" name="shape" value="{{ shape }}">Go to Step 3</button>
        <button type="button" class="btn btn-default" id="cancel_btn" onclick="window.location.href=1">Cancel</button>
      </span>
    </form>
  </div>
</div>
